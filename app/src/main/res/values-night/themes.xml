<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark theme variant -->
    <style name="Theme.NetSpeed" parent="android:Theme.Material.NoActionBar">
        <!-- Primary colors -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/background</item>
        <item name="android:colorAccent">@color/secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window flags -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/background</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/ic_speed</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">500</item>
    </style>

</resources>